@using StudentAppRecovered.Helper
@{
    var stud = (StudentId)TempData["Id"];
    var formid = "Experience" + stud.id;
}
<form id="@formid">
    <div class="card" title="Experience">
        <div class="card-content">
            <div class="input-field">
                <span class="fa fa-shield orange-text text-darken-3 prefix" />
                <input title="Position" name="txtPosition" type="text" maxlength="50">
                <label for="txtPosition">Position*</label>
            </div>
            <div class="input-field">
                <span class="fa fa-bank orange-text text-darken-3 prefix" />
                <input title="Organisation" name="txtOrganisation" type="text" maxlength="30">
                <label for="txtOrganisation">Organisation*</label>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <span class="fa fa-calendar orange-text text-darken-3 prefix" />
                    <input title="ExperienceFrom" name="txtExperienceFrom" type="text" class="datepicker">
                    <label for="txtExperienceFrom">from*</label>
                </div>
                <div class="input-field col s6">
                    <span class="fa fa-calendar orange-text text-darken-3 prefix" />
                    <input title="ExperienceTo" name="txtExperienceTo" type="text" class="datepicker">
                    <label for="txtExperienceTo">to*</label>
                </div>
            </div>
            <div class="input-field">
                <span class="fa fa-bars orange-text text-darken-3 prefix" />
                <textarea title="Responsibilities" name="txtResponsibilities" class="materialize-textarea"></textarea>
                <label for="txtResponsibilities">Responsibilities *</label>
            </div>
        </div>
    </div>
</form>