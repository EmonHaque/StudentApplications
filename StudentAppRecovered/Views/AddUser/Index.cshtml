@using StudentAppRecovered.Helper
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="card">
        <div class="container">
            <div class="row">

                <div class="col s3">
                    <img id="userImage" src="" height="150" width="150" />
                </div>
                <div class="col s9">
                    <label for="ddlSelectStudent">Select user*</label>
                    <select class="error browser-default" id="SelectStudent" name="ddlSelectStudent" title="dropdownlist">
                        <option value="" disabled selected>Choose</option>
                        @foreach (var item in (IEnumerable<Student4WhoWhere>)TempData["Unused"])
                        {
                            <option value="@item.Id">
                                @item.Name
                            </option>
                        }
                    </select>
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="UserName">User Name</label>
                            <input type="text" id="UserName" name="UserName" />
                        </div>
                        <div class="input-field col s6">
                            <label for="Password">Password</label>
                            <input type="password" id="Password" name="Password" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s8">
                            <label for="Role">Select Role</label>
                            <select class="error browser-default" name="Role">
                                <option>Administrator</option>
                                <option>Partner</option>
                            </select>
                        </div>
                        <div class="col s4">
                            <div class="input-field">
                                <input type="button" value="Add" class="btn waves-effect right" id="btnAddUser" />
                            </div>
                        </div>
                    </div>
                    <div style="color:Green" id="Message"></div>
                </div>               
            </div>
        </div>
    </div>
</div>

