@using StudentAppRecovered.Helper
@{
    var stud = (StudentId)TempData["Id"];
}

<div class="card">
    <div class="card-content">
        <div class="row" style="margin-bottom:0">
            <button id="ClosePromoteDiv"
                    class="btn-floating orange darken-4 right tooltipped"
                    data-position="left"
                    data-delay="50"
                    data-tooltip="Click to Close">
                <span class="fa fa-remove"></span>
            </button>
        </div>
        <div class="row">
            <div><b>Update Info</b></div>
            <div class="divider orange darken-4" />
        </div>

        <div class="row">
            <form id="JoiningDateForm">
                <div class="row">
                    <div class="input-field col s6">
                        <span class="fa fa-user orange-text text-darken-4 prefix"></span>
                        <input title="InitUserName" name="txtInitUserName" type="text">
                        <label for="txtInitUserName">Username*</label>
                    </div>
                    <div class="input-field col s6">
                        <span class="fa fa-eye orange-text text-darken-4 prefix"></span>
                        <input title="InitPassword" name="txtInitPassword" type="password">
                        <label for="txtInitPassword">Password*</label>
                    </div>
                </div>
                <div class="row col m6">
                    <div class="input-field">
                        <span class="fa fa-hand-peace-o orange-text text-darken-4 prefix"></span>
                        <input id="JoiningDate" name="txtJoiningDate" type="text" class="datepicker">
                        <label for="txtJoiningDate">Joining Date*</label>
                    </div>
                </div>
            </form>
            <div class="row">
                <button id="btnUpdateJoiningDate" value="@stud.id"
                        class="btn-floating btn-large waves-effect green right tooltipped"
                        style="margin-top:15px"
                        data-position="left"
                        data-delay="50"
                        data-tooltip="Are you sure?">
                    <span class="fa fa-check"></span>
                </button>
            </div>
            <div id="errorMsg" class="red-text" />
        </div>
    </div>
</div>