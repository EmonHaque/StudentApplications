@using StudentAppRecovered.Helper
@{
    var stud = (StudentId)TempData["Id"];
    var info = WhoIsWhereLists.HRSupervisor.Where(x => x.Id == stud.id).First(); //(HRSupervisory)TempData["RegInfo"];
    var joinedon = WhoIsWhereLists.Students4WhoIsWhere.Where(x => x.Id == info.Id).Select(x => x.JoinedOn).First();
    var partner = WhoIsWhereLists.Students4WhoIsWhere.Where(x => x.Id == info.PartnerId).Select(x => x.Name).First();
    var manager = WhoIsWhereLists.Students4WhoIsWhere.Where(x => x.Id == info.ManagerId).Select(x => x.Name).First();
    var partners = WhoIsWhereLists.Partners;
}


<div class="card">
    <div class="card-content">
        <div class="row" style="margin-bottom:0">
            <button id="ClosePromoteDiv"
                    class="btn-floating orange darken-4 right tooltipped"
                    data-position="left"
                    data-delay="50"
                    data-tooltip="Click to Close">
                <span class="fa fa-remove"></span>
            </button>
        </div>
        <div class="row">
            <div>Select following fields</div>
            <div class="divider orange darken-4" />
        </div>    

        <div class="row">
            <div class="col m6">
                <img id="partnerImage" src="" height="150" width="150" class="responsive-img circle"/>
            </div>
            <div class="col m6">
                <img id="managerImage" src="" height="150" width="150" class="responsive-img circle"/>
            </div>
        </div>
        <div>
            <form id="StudentRegistrationForm">
                <div>
                    <div class="input-field">
                        <span class="fa fa-user orange-text text-darken-4 prefix"></span>
                        <select id="SelectPartner" name="ddlSelectPartner">
                            <option value="" disabled selected>Choose</option>
                            @foreach (var item in partners)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                        <label for="ddlSelectPartner">Select partner*</label>
                    </div>
                </div>

                <div>
                    <div class="input-field">
                        <span class="fa fa-user orange-text text-darken-4 prefix"></span>
                        <select id="SelectManager" name="ddlSelectManager">
                            <option value="" disabled selected>Choose</option>
                        </select>
                        <label for="ddlSelectManager">Select manager*</label>
                    </div>
                </div>
                <div class="input-field col m6">
                    <span class="fa fa-calendar orange-text text-darken-4 prefix"></span>
                    <input id="DateOfRegistration" name="txtDateOfRegistration" type="text" class="datepicker">
                    <label for="txtDateOfRegistration">Date of Registration*</label>
                </div>
            </form>
        </div>
        <div class="row">
            <button id="btnUpdateRegistration" value="@info.Id"
                    class="btn-floating btn-large waves-effect green right tooltipped"
                    style="margin-top:15px"
                    data-position="left"
                    data-delay="50"
                    data-tooltip="Are you sure?">
                <span class="fa fa-check"></span>
            </button>
        </div>
    </div>
</div>

